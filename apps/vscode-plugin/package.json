{
  "name": "pulsedev-ccm",
  "displayName": "PulseDev+ Cognitive Context Mirror",
  "description": "Captures and analyzes your development context",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pulsedev.startContext",
        "title": "Start Context Capture",
        "category": "PulseDev"
      },
      {
        "command": "pulsedev.stopContext",
        "title": "Stop Context Capture",
        "category": "PulseDev"
      },
      {
        "command": "pulsedev.viewContext",
        "title": "View Context Dashboard",
        "category": "PulseDev"
      },
      {
        "command": "pulsedev.wipeContext",
        "title": "Wipe Context Data",
        "category": "PulseDev"
      }
    ],
    "configuration": {
      "title": "PulseDev+ CCM",
      "properties": {
        "pulsedev.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "CCM API endpoint URL"
        },
        "pulsedev.enableFileWatcher": {
          "type": "boolean",
          "default": true,
          "description": "Enable file system change monitoring"
        },
        "pulsedev.enableTerminalCapture": {
          "type": "boolean",
          "default": true,
          "description": "Enable terminal command capture"
        },
        "pulsedev.sessionTimeout": {
          "type": "number",
          "default": 1440,
          "description": "Session timeout in minutes (default: 24h)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "ws": "^8.14.0",
    "chokidar": "^3.5.3"
  }
}